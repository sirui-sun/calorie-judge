<h1>Listing foods</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Calorie</th>
    <th>Serving size</th>
    <th>Company</th>
    <th>Source</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.number %></td>
    <td><%= food.name %></td>
    <td><%= food.calorie %></td>
    <td><%= food.serving_size %></td>
    <td><%= food.company %></td>
    <td><%= food.source %></td>
    <td><%= food.tags %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

